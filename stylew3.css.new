/* =====================================================
   RESET BÁSICO + BASE
   ===================================================== */

*,
*::before,
*::after {
  box-sizing: border-box;
}

html {
  overflow-x: hidden;
}

body {
  margin: 0;
  font-family: Verdana, sans-serif;
  font-size: 15px;
  line-height: 1.5;
}

/* =====================================================
   TIPOGRAFIA
   ===================================================== */

h1, h2, h3, h4, h5, h6 {
  font-family: "Segoe UI", Arial, sans-serif;
  font-weight: 400;
  margin: 10px 0;
}

h3 {
  font-size: 24px;
}

.w3-large {
  font-size: 18px;
}

.w3-medium {
  font-size: 15px;
}

.w3-justify {
  text-align: justify;
}

.w3-center {
  text-align: center;
}

/* =====================================================
   CORES
   ===================================================== */

.w3-black {
  color: #fff;
  background-color: #000;
}

.w3-dark-grey {
  color: #fff;
  background-color: #616161;
}

.w3-opacity {
  opacity: 0.6;
}

/* =====================================================
   IMAGENS
   ===================================================== */

.w3-image {
  max-width: 100%;
  height: auto;
  vertical-align: middle;
}

/* =====================================================
   LAYOUT
   ===================================================== */

.w3-top {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 10;
}

.w3-content {
  max-width: 980px;
  margin-left: auto;
  margin-right: auto;
}

.w3-container {
  padding: 0.01em 16px;
}

.w3-row {
  width: 100%;
}

.w3-row-padding {
  display: flex;
  flex-wrap: wrap;
  gap: 16px;
}

.w3-third {
  width: 100%;
}

@media (min-width: 601px) {
  .w3-third {
    width: calc(33.333% - 11px);
  }
}

/* =====================================================
   BARRA DE NAVEGAÇÃO
   ===================================================== */

.w3-bar {
  display: flex;
  align-items: center;
  background-color: inherit;
}

.w3-bar-item {
  padding: 8px 16px;
  text-decoration: none;
  color: inherit;
  cursor: pointer;
}

.w3-button {
  border: none;
  background: none;
  font: inherit;
}

/* =====================================================
   MENU MOBILE
   ===================================================== */

.w3-bar-block {
  display: flex;
  flex-direction: column;
}

.w3-hide {
  display: none !important;
}

@media (max-width: 600px) {
  .w3-hide-small {
    display: none !important;
  }
}

@media (min-width: 601px) and (max-width: 992px) {
  .w3-hide-medium {
    display: none !important;
  }
}

@media (min-width: 993px) {
  .w3-hide-large {
    display: none !important;
  }
}

/* =====================================================
   ESPAÇAMENTOS
   ===================================================== */

.w3-padding {
  padding: 8px 16px;
}

.w3-padding-32 {
  padding-top: 32px;
  padding-bottom: 32px;
}

.w3-padding-64 {
  padding-top: 64px;
  padding-bottom: 64px;
}

.w3-margin-bottom {
  margin-bottom: 16px;
}

/* =====================================================
   CARDS
   ===================================================== */

.w3-card {
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
}
